<% layout('/layout/boilerplate') -%>

<style>
    body {
        background-color: rgb(52, 51, 51);
        color: white;
    }
    
    .container {
        text-align: center; 
        
     }

</style>
<body>
     <div class="containermain">
      <div class="container-inner">
      <div class="showabout">
        
        <h1><u><b>!! ABOUT !!</b></u></h1>
      <br>
      
      <% for(let data of aboutdata) { %>
               <div><%= data.about %></div>
        
      
    </div>
      <div class="about-edit">
       <div class="a">
          <form method="get" action="/aboutdata/<%= data._id %>/edit">
            <button type="submit" class="btn btn-primary">Edit</button>
          </form>
       </div>
       <div class="a">
           <form method="post" action="/aboutdata/<%= data._id %>/delete?_method=DELETE">
               <button type="submit" class="btn btn-primary">Clear</button>
           </form>
       </div>
    </div>
      <% } %>
      </div>
    </div>
</body>
